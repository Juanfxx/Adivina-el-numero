
<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml" fx:controller="controllers.GameController" spacing="10" style="-fx-padding: 20; -fx-alignment: center;">
    <Label text="Adivina el Número" style="-fx-font-size: 20px; -fx-font-weight: bold;" />
    <TextField fx:id="inputNumber" promptText="Introduce un número" />
    <Button fx:id="guessButton" text="Adivinar" onAction="#handleGuess" />
    <Label fx:id="feedbackLabel" style="-fx-font-size: 14px;" />
</VBox>
